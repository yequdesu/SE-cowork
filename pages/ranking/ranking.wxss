/* 变量定义 */
page {
  background-color: #f7f8fa;
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", sans-serif;
  --primary: #005bea;
  --text-dark: #2c3e50;
  --text-grey: #95a5a6;
  --gold: #ffc107;
  --silver: #e0e0e0;
  --bronze: #e6a23c;
  --gradient-blue: linear-gradient(to top, #005bea, #00c6fb);
  --gradient-gold: linear-gradient(to top, #f6d365, #fda085);
}

.container {
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 头部 */
.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.page-title {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--text-dark);
}

.refresh-icon {
  background: #fff;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.icon-text {
  font-size: 26rpx;
  color: var(--primary);
  font-weight: 600;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
  color: var(--text-grey);
  font-size: 28rpx;
}
.spinner {
  width: 50rpx;
  height: 50rpx;
  border: 4rpx solid #ddd;
  border-top-color: var(--primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin { to { transform: rotate(360deg); } }

/* Top 3 领奖台 */
.top-three {
  display: flex;
  justify-content: center;
  align-items: flex-end; /* 底部对齐 */
  margin-bottom: 60rpx;
  padding-top: 20rpx;
}

.podium-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  width: 180rpx;
}

/* 阶梯高度视觉差 */
.rank-1 { padding-bottom: 40rpx; z-index: 10; transform: scale(1.1); }
.rank-2 { padding-bottom: 0; }
.rank-3 { padding-bottom: 0; }

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-dark);
  border: 6rpx solid #fff;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1);
  margin-bottom: 16rpx;
}

.avatar.main {
  width: 130rpx;
  height: 130rpx;
  font-size: 50rpx;
  border-color: var(--gold);
}

.crown {
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  color: #fff;
}
.crown.gold { font-size: 40rpx; padding: 0; margin-bottom: -10rpx; z-index: 11; color: unset; background: none; } /* 皇冠图标 */
.crown.silver { background: var(--text-grey); }
.crown.bronze { background: var(--bronze); }

.name {
  font-size: 26rpx;
  color: var(--text-dark);
  font-weight: 600;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.score {
  font-size: 32rpx;
  font-weight: 800;
  color: var(--text-dark);
}
.score.main { color: #d3a625; font-size: 40rpx; }

/* 通用卡片样式 */
.section-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.03);
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-dark);
  margin-bottom: 30rpx;
  display: block;
}

/* 图表滚动区 */
.chart-scroll {
  width: 100%;
  height: 360rpx;
}

.chart-wrapper {
  display: flex;
  align-items: flex-end;
  padding-bottom: 10rpx;
  padding-left: 10rpx;
}

.bar-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
  width: 60rpx;
  flex-shrink: 0;
}

.bar {
  width: 24rpx;
  border-radius: 12rpx;
  min-height: 10rpx;
  margin: 10rpx 0;
  opacity: 0.9;
}

.bar-val, .bar-name {
  font-size: 20rpx;
  color: var(--text-grey);
}

/* 列表区域 */
.list-header {
  display: flex;
  padding: 0 20rpx 20rpx 20rpx;
  font-size: 24rpx;
  color: var(--text-grey);
}
.col-rank { width: 80rpx; text-align: center; }
.col-name { flex: 1; padding-left: 20rpx; }
.col-data { width: 140rpx; text-align: right; }

.rank-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}

.rank-badge {
  width: 60rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-grey);
  text-align: center;
  margin-right: 20rpx;
}
/* 前三名在列表中也给一点颜色，虽然上面已经展示了 */
.rank-badge.top-1 { color: #d3a625; }
.rank-badge.top-2 { color: #999; }
.rank-badge.top-3 { color: #c08e48; }

.info-block {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.student-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-dark);
}

.student-id {
  font-size: 22rpx;
  color: var(--text-grey);
  margin-top: 4rpx;
}

.data-block {
  text-align: right;
}

.score-val {
  display: block;
  font-size: 34rpx;
  font-weight: 800;
  color: var(--primary);
}

.count-label {
  font-size: 20rpx;
  color: var(--text-grey);
}