/* ==================== 
   全局风格定义 
   ==================== */
   page {
    /* 核心色板 */
    --primary: #3B82F6;
    --primary-dark: #2563EB;
    --primary-light: #EFF6FF;
    
    --text-main: #111827;
    --text-secondary: #4B5563;
    --text-tertiary: #9CA3AF;
    
    --bg-page: #F3F4F6;
    --bg-card: #FFFFFF;
    
    /* 状态色 */
    --success: #10B981;
    --success-bg: #ECFDF5;
    --danger: #EF4444;
    --danger-bg: #FEF2F2;
    --warning: #F59E0B;
    
    /* 阴影与圆角 */
    --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
    --shadow-md: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 16rpx 48rpx rgba(59, 130, 246, 0.15);
    
    --radius-md: 16rpx;
    --radius-lg: 24rpx;
    --radius-xl: 32rpx;
  
    background-color: var(--bg-page);
    font-family: -apple-system, "PingFang SC", "Helvetica Neue", sans-serif;
    box-sizing: border-box;
    padding-bottom: 60rpx;
  }
  
  .container {
    padding: 40rpx;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  
  /* ==================== 
     Header & Controls 
     ==================== */
  .header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 40rpx;
    padding-top: 10rpx;
  }
  
  .title {
    font-size: 48rpx;
    font-weight: 800;
    color: var(--text-main);
    display: block;
    letter-spacing: -1rpx;
  }
  
  .subtitle {
    font-size: 24rpx;
    color: var(--text-tertiary);
    margin-top: 6rpx;
    display: block;
  }
  
  .header-controls {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 20rpx;
  }
  
  .segment-control {
    background: #E5E7EB;
    padding: 6rpx;
    border-radius: 20rpx;
    display: flex;
  }
  
  .segment-item {
    padding: 10rpx 28rpx;
    font-size: 24rpx;
    color: var(--text-secondary);
    border-radius: 16rpx;
    font-weight: 600;
    transition: all 0.3s ease;
  }
  
  .segment-item.active {
    background: #fff;
    color: var(--text-main);
    box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.08);
  }
  
  .btn-events {
    background: #fff;
    color: var(--text-secondary);
    height: 56rpx;
    border-radius: 16rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    font-weight: 600;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
    border: 2rpx solid #E5E7EB;
    padding: 0 24rpx;
    margin: 0;
  }
  
  .btn-events-icon {
    margin-right: 8rpx;
    font-size: 24rpx;
  }
  
  .btn-hover { transform: scale(0.96); opacity: 0.9; }
  
  /* ==================== 
     Hero Card (抽奖区) 
     ==================== */
  .hero-section {
    margin-bottom: 50rpx;
  }
  
  .student-card {
    background: #fff;
    border-radius: var(--radius-xl);
    min-height: 420rpx; 
    position: relative;
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
    border: 2rpx solid rgba(255,255,255,0.5);
    padding: 40rpx 0;
  }
  
  /* 背景光斑 */
  .bg-blob {
    position: absolute;
    border-radius: 50%;
    filter: blur(50rpx);
    opacity: 0.5;
    z-index: 0;
  }
  .blob-1 { width: 260rpx; height: 260rpx; background: #DBEAFE; top: -40rpx; right: -40rpx; }
  .blob-2 { width: 200rpx; height: 200rpx; background: #E0E7FF; bottom: -20rpx; left: -20rpx; }
  
  /* 待机状态 */
  .state-empty {
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .empty-icon-wrapper {
    width: 120rpx;
    height: 120rpx;
    background: var(--bg-page);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20rpx;
    box-shadow: inset 0 0 20rpx rgba(0,0,0,0.03);
  }
  
  .icon-dice {
    font-size: 60rpx;
    animation: pulse-emoji 2s infinite;
  }
  
  .empty-hint {
    color: var(--text-tertiary);
    font-size: 28rpx;
  }
  
  /* 结果状态 */
  .state-result {
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    animation: popIn 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  
  .avatar-ring {
    padding: 6rpx;
    background: linear-gradient(135deg, var(--primary), #60A5FA);
    border-radius: 50%;
    box-shadow: 0 10rpx 30rpx rgba(59, 130, 246, 0.3);
    margin-bottom: 16rpx;
  }
  
  .avatar {
    width: 110rpx;
    height: 110rpx;
    background: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 48rpx;
    font-weight: 800;
    color: var(--primary);
  }
  
  .result-name {
    font-size: 56rpx;
    font-weight: 800;
    color: var(--text-main);
    margin-bottom: 8rpx;
    line-height: 1.1;
  }
  
  .result-id {
    font-size: 26rpx;
    color: var(--text-secondary);
    background: rgba(255,255,255,0.7);
    padding: 4rpx 16rpx;
    border-radius: 100rpx;
    margin-bottom: 16rpx;
  }
  
  /* 【修复】连击显示 - 改为绝对定位的徽章 */
  .combo-badge {
    position: absolute;
    top: 24rpx;
    right: 24rpx;
    z-index: 10;
    animation: popIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }
  
  .combo-text {
    font-size: 22rpx;
    color: #F59E0B;
    font-weight: 700;
    background: #FFFBEB;
    border: 2rpx solid #FCD34D;
    padding: 4rpx 14rpx;
    border-radius: 30rpx;
    box-shadow: 0 4rpx 10rpx rgba(245, 158, 11, 0.1);
  }
  
  /* 随机事件卡片 */
  .event-display {
    width: 85%;
    background: linear-gradient(135deg, #F0FDF4, #DCFCE7);
    border: 2rpx solid rgba(16, 185, 129, 0.3);
    border-radius: 20rpx;
    padding: 20rpx;
    margin-top: 10rpx;
    animation: event-appear 0.5s ease-out;
    box-shadow: 0 8rpx 20rpx rgba(16, 185, 129, 0.1);
  }
  
  .event-header {
    display: flex;
    align-items: center;
    margin-bottom: 8rpx;
  }
  
  .event-icon {
    font-size: 32rpx;
    margin-right: 10rpx;
    animation: icon-bounce 0.8s ease infinite alternate;
  }
  
  .event-name {
    font-size: 28rpx;
    font-weight: 700;
    color: #059669;
    flex: 1;
  }
  
  .event-bonus {
    font-size: 22rpx;
    font-weight: 700;
    color: #059669;
    background: rgba(255,255,255,0.6);
    padding: 2rpx 10rpx;
    border-radius: 8rpx;
  }
  
  .event-description {
    font-size: 24rpx;
    color: #4B5563;
    line-height: 1.4;
    display: block;
  }
  
  .shine-effect {
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    background: radial-gradient(circle, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0) 70%);
    animation: flash 0.5s ease-out forwards;
    pointer-events: none;
  }
  
  /* ==================== 
     Action Button 
     ==================== */
  .btn-main {
    background: var(--primary);
    color: #fff;
    height: 100rpx;
    border-radius: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 34rpx;
    font-weight: 700;
    box-shadow: 0 10rpx 25rpx rgba(59, 130, 246, 0.4);
    border: none;
    position: relative;
    overflow: hidden;
    transition: all 0.2s;
  }
  
  .btn-main-hover {
    transform: scale(0.97);
    box-shadow: 0 6rpx 16rpx rgba(59, 130, 246, 0.3);
  }
  
  .btn-icon { margin-right: 12rpx; font-size: 36rpx; }
  
  .btn-glare {
    position: absolute;
    top: 0; left: -100%; width: 50%; height: 100%;
    background: linear-gradient(to right, transparent, rgba(255,255,255,0.3), transparent);
    transform: skewX(-20deg);
    animation: shine 3s infinite;
  }
  
  /* ==================== 
     Evaluation Panel 
     ==================== */
  .evaluation-panel {
    margin-top: 40rpx;
    background: #fff;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    opacity: 0.6;
    filter: grayscale(1);
    pointer-events: none;
    transform: translateY(20rpx);
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    padding: 30rpx;
  }
  
  .evaluation-panel.is-visible {
    opacity: 1;
    filter: grayscale(0);
    pointer-events: auto;
    transform: translateY(0);
  }
  
  .panel-title {
    font-size: 28rpx;
    font-weight: 700;
    color: var(--text-main);
    margin-bottom: 24rpx;
    display: block;
    padding-left: 8rpx;
    border-left: 6rpx solid var(--primary);
  }
  
  .panel-body {
    display: flex;
    flex-direction: column;
    gap: 24rpx;
    margin-bottom: 30rpx;
  }
  
  /* 行样式 */
  .control-row {
    display: flex;
    flex-direction: column;
  }
  
  .row-label {
    font-size: 24rpx;
    color: var(--text-secondary);
    margin-bottom: 12rpx;
    font-weight: 500;
  }
  
  /* Toggle & Radio Chips */
  .tag-toggle, .radio-chip {
    display: flex;
    align-items: center;
    padding: 20rpx 24rpx;
    background: #F3F4F6;
    border-radius: 16rpx;
    color: var(--text-secondary);
    font-size: 28rpx;
    font-weight: 500;
    transition: all 0.2s;
    border: 2rpx solid transparent;
  }
  
  .toggle-icon {
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
    border: 2rpx solid #D1D5DB;
    margin-right: 16rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 22rpx;
    color: transparent;
  }
  
  .tag-toggle.active-green {
    background: var(--success-bg);
    color: var(--success);
    border-color: var(--success);
  }
  .tag-toggle.active-green .toggle-icon {
    background: var(--success);
    border-color: var(--success);
    color: #fff;
  }
  
  .radio-group {
    display: flex;
    gap: 20rpx;
  }
  .radio-chip {
    flex: 1;
    justify-content: center;
    padding: 20rpx 0;
    font-size: 26rpx;
  }
  .radio-icon { margin-right: 8rpx; font-weight: bold; }
  
  .radio-chip.active-green {
    background: var(--success-bg);
    color: var(--success);
    border-color: var(--success);
  }
  .radio-chip.active-red {
    background: var(--danger-bg);
    color: var(--danger);
    border-color: var(--danger);
  }
  
  .exemption-notice {
    margin-top: 16rpx;
    background: #F0FDF4;
    border: 2rpx solid #BBF7D0;
    border-radius: 12rpx;
    padding: 16rpx;
    font-size: 24rpx;
    color: #15803D;
    font-weight: 500;
    text-align: center;
  }
  
  /* Score Input */
  .score-row {
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background: #F9FAFB;
    padding: 20rpx;
    border-radius: 16rpx;
  }
  .score-row .row-label { margin-bottom: 0; }
  
  .input-wrapper {
    display: flex;
    align-items: center;
    background: #fff;
    padding: 6rpx 16rpx;
    border-radius: 10rpx;
    border: 2rpx solid #E5E7EB;
  }
  
  .score-input {
    width: 70rpx;
    font-size: 32rpx;
    font-weight: 700;
    color: var(--text-main);
    text-align: center;
    height: 50rpx;
  }
  .unit { font-size: 24rpx; color: var(--text-tertiary); margin-left: 4rpx; margin-right: 10rpx; }
  
  .modifier-tag {
    font-size: 22rpx;
    font-weight: 700;
    padding: 4rpx 8rpx;
    border-radius: 8rpx;
    margin-left: 6rpx;
    line-height: 1;
  }
  .modifier-tag.multiplier { background: #EFF6FF; color: var(--primary); border: 1rpx solid #BFDBFE; }
  .modifier-tag.bonus { background: #ECFDF5; color: var(--success); border: 1rpx solid #A7F3D0; }
  
  /* Footer */
  .panel-footer {
    border-top: 2rpx solid #F3F4F6;
    padding-top: 24rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .preview-bar { display: flex; flex-direction: column; }
  .preview-label { font-size: 22rpx; color: var(--text-tertiary); }
  .preview-val { font-size: 40rpx; font-weight: 800; color: var(--primary); }
  
  .btn-submit {
    margin: 0;
    background: var(--text-main);
    color: #fff;
    font-size: 28rpx;
    font-weight: 600;
    border-radius: 50rpx;
    padding: 0 40rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
  }
  .btn-submit.disabled {
    background: #E5E7EB;
    color: #9CA3AF;
    box-shadow: none;
    pointer-events: none;
  }
  
  .btn-sub-hover { opacity: 0.9; transform: scale(0.96); }
  .chip-hover { transform: scale(0.98); opacity: 0.9; }
  
  /* Animations */
  @keyframes slideUp { from { opacity: 0; transform: translateY(20rpx); } to { opacity: 1; transform: translateY(0); } }
  @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
  @keyframes popIn { 0% { transform: scale(0.8); opacity: 0; } 70% { transform: scale(1.05); } 100% { transform: scale(1); opacity: 1; } }
  @keyframes pulse-emoji { 0%, 100% { transform: scale(1); } 50% { transform: scale(1.2); } }
  @keyframes shine { 0% { left: -100%; } 20% { left: 200%; } 100% { left: 200%; } }
  @keyframes flash { 0% { opacity: 1; } 100% { opacity: 0; } }
  @keyframes event-appear { 0% { opacity: 0; transform: translateY(10rpx) scale(0.95); } 100% { opacity: 1; transform: translateY(0) scale(1); } }
  @keyframes icon-bounce { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-4rpx); } }
  
  .slide-up { opacity: 0; animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards; }
  .fade-in { animation: fadeIn 0.8s ease forwards; }