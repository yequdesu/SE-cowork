/* ==================== 
   全局风格定义 
   ==================== */
   page {
    /* 核心色板 (继承) */
    --primary: #3B82F6;
    --primary-dark: #2563EB;
    --primary-light: #EFF6FF;
    --text-main: #111827;
    --text-secondary: #6B7280;
    --text-tertiary: #9CA3AF;
    --bg-page: #F3F4F6;
    --bg-card: #FFFFFF;
  
    /* 功能色 */
    --success: #10B981;
    --success-light: #D1FAE5;
    --warning: #F59E0B;
    --warning-light: #FEF3C7;
    
    /* 阴影与圆角 */
    --shadow-md: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 16rpx 48rpx rgba(59, 130, 246, 0.15);
    --radius-md: 16rpx;
    --radius-lg: 24rpx;
    --radius-xl: 32rpx;
  
    background-color: var(--bg-page);
    font-family: -apple-system, "PingFang SC", "Helvetica Neue", sans-serif;
    box-sizing: border-box;
    padding-bottom: 60rpx;
  }
  
  .container {
    padding: 40rpx;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  
  /* ==================== 
     Header & Tabs 
     ==================== */
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 50rpx;
    padding-top: 20rpx;
  }
  
  .title {
    font-size: 48rpx;
    font-weight: 800;
    color: var(--text-main);
    display: block;
    letter-spacing: -1rpx;
  }
  
  .subtitle {
    font-size: 26rpx;
    color: var(--text-tertiary);
    margin-top: 6rpx;
    display: block;
  }
  
  /* 胶囊切换器 */
  .segment-control {
    background: #E5E7EB;
    padding: 6rpx;
    border-radius: 20rpx;
    display: flex;
  }
  
  .segment-item {
    padding: 12rpx 32rpx;
    font-size: 28rpx;
    color: var(--text-secondary);
    border-radius: 16rpx;
    font-weight: 600;
    transition: all 0.3s ease;
  }
  
  .segment-item.active {
    background: #fff;
    color: var(--text-main);
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  }
  
  /* ==================== 
     Hero Card (抽奖区) 
     ==================== */
  .hero-section {
    margin-bottom: 60rpx;
  }
  
  .student-card {
    background: #fff;
    border-radius: var(--radius-xl);
    height: 420rpx;
    position: relative;
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
    border: 2rpx solid #fff;
  }
  
  /* 卡片背景装饰 */
  .bg-circle {
    position: absolute;
    border-radius: 50%;
    filter: blur(60rpx);
    opacity: 0.6;
    z-index: 0;
  }
  .c-1 { width: 300rpx; height: 300rpx; background: #DBEAFE; top: -50rpx; right: -50rpx; }
  .c-2 { width: 200rpx; height: 200rpx; background: #E0E7FF; bottom: -30rpx; left: -30rpx; }
  
  /* --- 待机状态 --- */
  .state-empty {
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .empty-icon-box {
    width: 120rpx;
    height: 120rpx;
    background: var(--bg-page);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 60rpx;
    margin-bottom: 24rpx;
    box-shadow: inset 0 0 20rpx rgba(0,0,0,0.05);
  }
  
  .icon-pulse {
    animation: pulse-emoji 2s infinite;
  }
  
  .empty-hint {
    color: var(--text-tertiary);
    font-size: 28rpx;
  }
  
  /* --- 结果状态 --- */
  .state-result {
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    animation: popIn 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  
  .avatar-ring {
    padding: 8rpx;
    background: linear-gradient(135deg, var(--primary), #60A5FA);
    border-radius: 50%;
    box-shadow: 0 10rpx 30rpx rgba(59, 130, 246, 0.3);
    margin-bottom: 24rpx;
  }
  
  .avatar {
    width: 120rpx;
    height: 120rpx;
    background: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 50rpx;
    font-weight: 800;
    color: var(--primary);
  }
  
  .result-name {
    font-size: 64rpx;
    font-weight: 800;
    color: var(--text-main);
    line-height: 1.1;
    margin-bottom: 8rpx;
  }
  
  .result-id {
    font-size: 28rpx;
    color: var(--text-secondary);
    background: rgba(255,255,255,0.6);
    padding: 4rpx 16rpx;
    border-radius: 100rpx;
    backdrop-filter: blur(4px);
  }
  
  /* 结果闪光层 */
  .shine-overlay {
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    background: radial-gradient(circle, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0) 70%);
    animation: flash 0.5s ease-out forwards;
    pointer-events: none;
  }
  
  /* ==================== 
     Action Button 
     ==================== */
  .btn-main {
    background: var(--primary);
    color: #fff;
    height: 110rpx;
    border-radius: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
    font-weight: 700;
    box-shadow: 0 12rpx 30rpx rgba(59, 130, 246, 0.4);
    border: none;
    position: relative;
    overflow: hidden;
    transition: all 0.2s;
  }
  
  .btn-main-hover {
    transform: scale(0.96);
    box-shadow: 0 6rpx 16rpx rgba(59, 130, 246, 0.3);
  }
  
  .btn-icon { margin-right: 16rpx; }
  
  .btn-shine {
    position: absolute;
    top: 0; left: -100%; width: 50%; height: 100%;
    background: linear-gradient(to right, transparent, rgba(255,255,255,0.25), transparent);
    transform: skewX(-20deg);
    animation: shine 3s infinite;
  }
  
  /* ==================== 
     Evaluation Panel 
     ==================== */
  .evaluation-panel {
    margin-top: 50rpx;
    background: #fff;
    border-radius: var(--radius-lg);
    padding: 32rpx;
    box-shadow: var(--shadow-md);
    opacity: 0.6;
    filter: grayscale(1);
    pointer-events: none;
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    transform: translateY(20rpx);
  }
  
  .evaluation-panel.is-visible {
    opacity: 1;
    filter: grayscale(0);
    pointer-events: auto;
    transform: translateY(0);
  }
  
  .panel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30rpx;
  }
  
  .panel-title {
    font-size: 30rpx;
    font-weight: 700;
    color: var(--text-main);
  }
  
  .panel-body {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 30rpx;
  }
  
  /* 标签 */
  .tags-container {
    display: flex;
    gap: 20rpx;
  }
  
  .tag-chip {
    display: flex;
    align-items: center;
    padding: 16rpx 24rpx;
    background: #F3F4F6;
    border-radius: 16rpx;
    color: var(--text-secondary);
    font-size: 26rpx;
    font-weight: 500;
    transition: all 0.2s;
    border: 2rpx solid transparent;
  }
  
  .chip-icon { margin-right: 8rpx; font-weight: bold; }
  
  .tag-chip.active-green {
    background: var(--success-light);
    color: var(--success);
    border-color: var(--success);
  }
  
  .tag-chip.active-orange {
    background: var(--warning-light);
    color: var(--warning);
    border-color: var(--warning);
  }
  
  .chip-hover { transform: scale(0.95); }
  
  /* 评分框 */
  .score-wrapper {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }
  
  .label { font-size: 22rpx; color: var(--text-tertiary); margin-bottom: 4rpx; }
  
  .input-box {
    display: flex;
    align-items: baseline;
    background: #F9FAFB;
    padding: 10rpx 20rpx;
    border-radius: 12rpx;
  }
  
  .score-input {
    width: 60rpx;
    font-size: 40rpx;
    font-weight: 700;
    color: var(--text-main);
    text-align: center;
    height: 50rpx;
  }
  
  .suffix { font-size: 24rpx; color: var(--text-tertiary); margin-left: 4rpx; }
  
  /* 提交按钮 */
  .btn-submit {
    background: #fff;
    color: var(--text-main);
    font-size: 30rpx;
    font-weight: 600;
    border: 2rpx solid #E5E7EB;
    border-radius: 100rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .btn-sub-hover { background: #F9FAFB; }
  
  /* ==================== 
     Animation 
     ==================== */
  @keyframes slideUp {
    from { opacity: 0; transform: translateY(30rpx); }
    to { opacity: 1; transform: translateY(0); }
  }
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  @keyframes popIn {
    0% { transform: scale(0.8); opacity: 0; }
    70% { transform: scale(1.05); }
    100% { transform: scale(1); opacity: 1; }
  }
  @keyframes pulse-emoji {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.2); }
  }
  @keyframes shine {
    0% { left: -100%; }
    20% { left: 200%; }
    100% { left: 200%; }
  }
  @keyframes flash {
    0% { opacity: 1; }
    100% { opacity: 0; }
  }
  
  .slide-up { opacity: 0; animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards; }
  .fade-in { animation: fadeIn 0.8s ease forwards; }